model Artifact {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  era         String?
  imageUrl    String?
  createdAt   DateTime     @default(now())
  metadata    Metadata[]
  contributions Contribution[]
}

model Metadata {
  id         Int      @id @default(autoincrement())
  artifactId Int
  artifact   Artifact @relation(fields: [artifactId], references: [id])
  key        String
  value      String?
  updatedAt  DateTime @default(now())
}

model Contribution {
  id         Int      @id @default(autoincrement())
  artifactId Int
  artifact   Artifact @relation(fields: [artifactId], references: [id])
  userId     Int
  content    String
  status     String
  createdAt  DateTime @default(now())